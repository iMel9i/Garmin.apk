<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textDataType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Переменная: Ограничение скорости"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="API URL"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/editApiUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="https://overpass-api.de/api/interpreter"
            android:inputType="textUri"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Запрос (Query)"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Используйте {lat}, {lon}, {radius} для подстановки"
            android:textSize="12sp"
            android:textColor="#666"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/editQuery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="[out:json]; way(around:{radius}, {lat}, {lon})..."
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:typeface="monospace"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Радиус поиска (м)"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/editSearchRadius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="20"
            android:inputType="number"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Поле для парсинга"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JSON path к нужному полю (например: elements[0].tags.maxspeed)"
            android:textSize="12sp"
            android:textColor="#666"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/editParseField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="elements[0].tags.maxspeed"
            android:inputType="text"
            android:typeface="monospace"/>

    </LinearLayout>
</ScrollView>
