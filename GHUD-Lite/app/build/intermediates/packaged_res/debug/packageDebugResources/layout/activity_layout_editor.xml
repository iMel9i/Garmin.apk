<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Конструктор Экрана"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <!-- HUD Visual Representation -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/hudContainer"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/hud_bg_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerMode">

        <!-- 5. Direction Arrow (Left) -->
        <TextView
            android:id="@+id/slotDirection"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="24dp"
            android:background="#33FFFFFF"
            android:gravity="center"
            android:text="↰"
            android:textColor="#00FF00"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Направление"
            android:textColor="#AAAAAA"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@id/slotDirection"
            app:layout_constraintStart_toStartOf="@id/slotDirection"
            app:layout_constraintEnd_toEndOf="@id/slotDirection"/>

        <!-- 1. Main Number (Top Right) -->
        <TextView
            android:id="@+id/slotMainNumber"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="24dp"
            android:background="#33FFFFFF"
            android:gravity="center_vertical|end"
            android:paddingEnd="8dp"
            android:text="500 m"
            android:textColor="#00FF00"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Главное поле"
            android:textColor="#AAAAAA"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@id/slotMainNumber"
            app:layout_constraintEnd_toEndOf="@id/slotMainNumber"/>

        <!-- 2. Secondary Number (Bottom Right) -->
        <TextView
            android:id="@+id/slotSecondaryNumber"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:background="#33FFFFFF"
            android:gravity="center_vertical|end"
            android:paddingEnd="8dp"
            android:text="12:20"
            android:textColor="#00FF00"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Втор. поле"
            android:textColor="#AAAAAA"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@id/slotSecondaryNumber"
            app:layout_constraintEnd_toEndOf="@id/slotSecondaryNumber"/>

        <!-- 4. Lanes (Bottom Left - approximated) -->
        <TextView
            android:id="@+id/slotLanes"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginBottom="16dp"
            android:background="#33FFFFFF"
            android:gravity="center"
            android:text="↑ ↑ ↑"
            android:textColor="#00FF00"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Нажмите на элемент экрана, чтобы изменить его содержимое"
        android:textColor="#AAAAAA"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hudContainer" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Сохранить"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
