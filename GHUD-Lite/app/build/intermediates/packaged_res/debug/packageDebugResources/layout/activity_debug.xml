<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Debug Information"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- OSM Debug Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OpenStreetMap Debug"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="#E3F2FD"
            android:padding="8dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/osmLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location: -"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/osmSpeedLimit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Speed Limit: -"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/osmCameras"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cameras Found: -"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/osmNearestCamera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nearest Camera: -"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/osmUpdateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Update: -"
                android:textSize="12sp"
                android:fontFamily="monospace" />
        </LinearLayout>

        <!-- Navigation Debug Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Navigation Debug"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="#E8F5E9"
            android:padding="8dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/navPackage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Package: -"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/navTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title: -"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/navText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Text: -"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/navBigText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BigText: -"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="8dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginVertical="8dp" />

            <TextView
                android:id="@+id/navParsedInstruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Parsed Instruction: -"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/navParsedDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Parsed Distance: -"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/navParsedEta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Parsed ETA: -"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Extracted Arrow Image:"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp" />

            <ImageView
                android:id="@+id/navArrowImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:background="#DDDDDD"
                android:scaleType="fitCenter"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_height="80dp"
                android:layout_marginStart="24dp"
                android:background="#11FFFFFF"
                android:gravity="center"
                android:text="↑"
                android:textColor="#00FF00"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- 1. Main Number (Top Right) -->
            <TextView
                android:id="@+id/vHudMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="24dp"
                android:text="0"
                android:textColor="#00FF00"
                android:textSize="48sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- 2. Secondary Number (Bottom Right) -->
            <TextView
                android:id="@+id/vHudSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="24dp"
                android:text="--:--"
                android:textColor="#00FF00"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Icons Container (Middle) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/vHudMain"
                app:layout_constraintStart_toEndOf="@id/vHudDirection"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/vHudIconCamera"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_camera"
                    app:tint="#00FF00"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/vHudIconSpeeding"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_delete"
                    app:tint="#FF0000"
                    android:visibility="invisible"/>
            </LinearLayout>

            <!-- Lane Assist (Bottom Center) -->
            <LinearLayout
                android:id="@+id/vHudLaneAssist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <!-- Lanes will be added dynamically or just placeholders -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⬆ ⬆ ↱"
                    android:textColor="#00FF00"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Bottom Bar (Time/Distance) -->
            <TextView
                android:id="@+id/vHudBottomBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="_____"
                android:textColor="#00FF00"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="32dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- HUD Debug Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HUD Output Debug"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="#FFF3E0"
            android:padding="8dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/hudSpeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Speed: -"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/hudSpeedLimit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Displayed Speed Limit: -"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/hudSpeedingIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Speeding Icon: -"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/hudCameraIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Camera Icon: -"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/hudDirection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Direction: -"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/hudDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Distance: -"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/hudLastCommand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Command: -"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/hudUpdateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Update: -"
                android:textSize="12sp"
                android:fontFamily="monospace" />
        </LinearLayout>

        <Button
            android:id="@+id/btnRefresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Обновить"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnAppSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Настройки приложений"
            android:layout_marginBottom="8dp" />

    </LinearLayout>
</ScrollView>
